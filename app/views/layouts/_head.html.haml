%head
  %meta{:charset => 'utf-8'}
  %meta{:name => "robots", :content => "index, follow"}
  %meta{:name => "author", :content => "Softa"}
  = yield :meta_tags
  %title= "#{@title}#{' Â· ' if @title}#{current_site.name}"
  = stylesheet_link_tag 'applicatio', :media => 'screen, projection'
  = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
  = stylesheet_link_tag "sites/#{current_site.path}.css", :media => 'screen, projection'
